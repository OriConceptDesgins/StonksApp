@model StonksApp.Models.Stonk

<div class="container mt-5">
    <div class="row">
        <div class="col-sm-7 col-md-7 col-lg-7 col-xl-7">
            <div class="card">
                <div class="card-header">
                    <h4>@Model.Name</h4>
                    @Model.Symbol 
                    <br /><br />
                    <small>Exchange: @Model.Exchange</small>
                </div>
                <div class="card-body">
                    Current Price: @Model.Value
                    @if(Model.PrecentageChange > 0)
                    {
                        <span class="col-sm-2 text-success">@Model.PrecentageChange%</span>
                    }
                    else
                    {
                            <span class="col-sm-2 text-danger">@Model.PrecentageChange%</span>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
